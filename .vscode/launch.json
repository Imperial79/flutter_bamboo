{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Dart",
			"request": "launch",
			"type": "dart"
		},
		{
			"name": "Dart Console",
			"request": "launch",
			"type": "dart",
			"program": "bin/main.dart"
		},
		{
			"name": "Dart Tests",
			"request": "launch",
			"type": "dart",
			"program": "test/main_test.dart"
		},
		{
			"name": "Dart Web",
			"request": "launch",
			"type": "dart",
			"program": "web/index.html"
		},
		{
			"name": "Dart Web Server",
			"request": "launch",
			"type": "dart",
			"program": "web/index.html",
			"args": ["-d", "chrome"]
		},
		{
			"name": "Dart Web (Dart DevTools)",
			"request": "launch",
			"type": "dart",
			"program": "web/index.html",
			"args": ["--web-enable-debugger-extension"]
		},
		{
			"name": "Dart Web (Dart DevTools) Server",
			"request": "launch",
			"type": "dart",
			"program": "web/index.html",
			"args": ["-d", "chrome", "--web-enable-debugger-extension"]
		},
		{
			"name": "Dart Web (Dart DevTools) Server (webdev)",
			"request": "launch",
			"type": "dart",
			"program": "web/index.html",
			"args": ["-d", "chrome", "--web-enable-debugger-extension"],
			"cwd": "${workspaceFolder}/web"
		},
		{
			"name": "Dart Web (webdev)",
			"request": "launch",
			"type": "dart",
			"program": "web/index.html",
			"cwd": "${workspaceFolder}/web"
		},
		{
			"name": "Dart Web (webdev) Server",
			"request": "launch",
			"type": "dart",
			"program": ""
		},
		{
			"name": "Flutter",
			"type": "dart",
			"request": "launch",
			"program": "lib/main.dart"
		},
		{
			"name": "Dart & Flutter",
			"request": "launch",
			"type": "dart"
		}
	]
}
